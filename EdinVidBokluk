#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <time.h>
int PrintArr(char a[50][200]);
void CollectedTrash();
int main()
{
    system("COLOR 20");
    srand(time(NULL));
    char a[50][200];
    //int bokluk[50][200];
    int x,y,br=0,brbokluk,Kbr=0;
    char recpa='H';
    char recpl='P';
    char recgl='S';


    for (y=0; y<50; y++)
    {
        printf("\n");
        for(x=0; x<200; x++)
        {
            if (y==0 || y==49) a[y][x]='-';
            else{
                if (x==0 || x==199) a[y][x]='|';
                else a[y][x]=' ';
            }
            printf("%c", a[y][x]);
        }
    }

    a[48][98]='H';
    a[48][100]='P';
    a[48][102]='S';
    do{
    printf("\nHow much trash do you want to collect today?: ");
    scanf("%d",&brbokluk);
    }while(brbokluk<1 || brbokluk>9000);

    for (int n=0; n<brbokluk; n++)
    {
      RandFunction(x,y,a);
      PrintArr(a);
    }

    Choveche(y,x,a);
    PrintArr(a);

    do
    {
        br=Move(x,y,a,br);
        HasTrash(y,x,a,br);
        PrintArr(a);
    }while(br!=brbokluk);

    CollectedTrash();

    do{
        Kbr=RecycleBin(x,y,a);
        //SearchForTrash(a,brbokluk);
        PrintArr(a);
    }while(Kbr!=1);

    br=0;
    Kbr=0;

    do{
    Kbr=TreeMove(y,x,a,br);
    PrintArr(a);
    }while(Kbr!=brbokluk);
    
    printf("\n\nCongrats on cleaning the area and planting the trees!!");
    printf("\nYou may now rest!\n The end.");
}

//////////////////////////////////////////////////////////////////////////////////////

int PrintArr(char a[50][200])
{
    int y,x;
    system("cls"); // za triene
    for (y=0; y<50; y++)
    {
        printf("\n");
        for(x=0; x<200; x++)
        {
            printf("%c", a[y][x]);
        }
    }
}

int RandFunction(int x, int y, char a[50][200])
{
    srand(time(NULL));
    do{
    x=rand()%197 + 1;
    y=rand()%47 + 1;
    }while(a[y][x]=='W' || a[25][100]!=' ');
    a[y][x]='W';
}

int Choveche(int y, int x, char a[50][200])
{
    char moves;
    //char o;
    //o = 'o|--C';
    a[25][100]='O';
    printf("\n");
}

int Move(int x, int y, char a[50][200],int br)
{
    int k=0;

    char posoka;
    char searchLeft = 'a';
    char searchRight = 'd';
    char searchUp = 'w';
    char searchDown = 's';

    char searchLeftD = '1';
    char searchRightD = '2';
    char searchUpD = '3';
    char searchDownD = '4';
    printf("\nPosoka (1=10 v lqvo; 2=10 v dqsno; 3=10 nagore; 4=10 nadolu)\n a=1 v lqvo; d=1 v dqsno; w=1 nagore; s=1 nadolu: ");
    posoka=getchar();
    y=SearchOY(a);
    x=SearchOX(a);

        if (posoka == searchLeftD){
            if (a[y][x-10]=='X' || a[y][x-10]=='W') a[y][x-1]='O';
            else {
            a[y][x-10]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchRightD){
            if (a[y][x+10]=='X' || a[y][x+10]=='W') a[y][x+1]='O';
            else {
            a[y][x+10]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchUpD){
            if(a[y-10][x]=='X' || a[y-10][x]=='W') a[y-1][x]='O';
            else {
            a[y-10][x]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchDownD){
            if(a[y+10][x]=='X' || a[y+10][x]=='W') a[y+1][x]='O';
            else {
            a[y+10][x]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchLeft)
        {
             if (a[y][x-1]=='W')
            {
                printf("\nYou collected trash!");
                delay(2);
                a[y][x-1]='X';
                br++;
            }
             if(a[y][x-1]=='X'&&br>=1)
            {
                printf("\nYou have already taken this trash! You can't step on it.");
                delay(2);
                a[y][x]='O';
            }
             if(a[y][x-1]==' ')
             {
              a[y][x-1]='O';
              a[y][x]=' ';
             }
        }

        if (posoka == searchRight)
        {
            if (a[y][x+1]=='W')
            {
                printf("\nYou collected trash!");
                delay(2);
                a[y][x+1]='X';
                br++;
            }
             if(a[y][x+1]=='X' && br>=1)
            {
                printf("\nYou have already taken this trash! \nYou can't step on it.");
                delay(2);
                a[y][x]='O';
            }
             if(a[y][x+1]==' ')
            {
               a[y][x+1]='O';
               a[y][x]=' ';
            }
        }

        if (posoka == searchUp ) {
            if (a[y-1][x]=='W')
            {
                printf("\nYou collected trash!");
                delay(2);
                a[y-1][x]='X';
                br++;
            }
            if(a[y-1][x]=='X' &&br>=1)
            {
                printf("\nYou have already taken this trash! You can't step on it.");
                delay(2);
                a[y][x]='O';
            }
            if(a[y-1][x]==' ')
            {
                a[y-1][x]='O';
                a[y][x]=' ';
            }
        }

        if (posoka == searchDown )
        {
            if (a[y+1][x]=='W'){
                printf("\nYou collected trash!");
                delay(2);
                a[y+1][x]='X';
                br++;
            }
            if(a[y+1][x]=='X' && br>=1)
            {
                printf("\nYou have already taken this trash! You can't step on it.");
                delay(2);
                a[y][x]='O';
            }
            if(a[y+1][x]==' ')
            {
                a[y+1][x]='O';
                a[y][x]=' ';
            }
        }

        return br;
}

 void HasTrash(int y, int x, char a[50][200],int br)
{

    if ((a[47][98]=='O' || a[48][96]=='O' || a[48][99]=='O') && br!=0){ // hartiq 48 98 //
        printf("\nYou threw some paper!");
        delay(2);
        a[48][98]='H';
        a[y][x]='O';
        br=0;
    }

    if ((a[47][98]=='O' || a[48][96]=='O' || a[48][99]=='O') && br==0){
             printf("\nYou don't have any trash with you! \nYou can't throw yourself - you are not from paper?!");
             delay(2);
            }


    if ((a[47][100]=='O' || a[48][99]=='O' || a[48][101]=='O') && br!=0){ //plastmasa
        printf("\nYou threw some plastic materials!");
        delay(2);
        a[48][100]='P';
        a[y][x]='O';
        br=0;
    }

    if ((a[47][100]=='O' || a[48][99]=='O' || a[48][101]=='O') && br==0){
            printf("\nYou don't have any trash with you! \nGo collect some, before I see you again here empty handed!");
            delay(2);
        }

    if ((a[47][102]=='O' || a[48][101]=='O' || a[48][103]=='O') && br!=0){ //styklo
        printf("\nYou threw some glass!");
        delay(2);
        a[48][102]='S';
        a[y][x]='O';
        br=0;
    }

    if ((a[47][102]=='O' || a[48][101]=='O' || a[48][103]=='O') && br==0){
            printf("\nYou don't have any trash with you! \nYou are not from glass so don't throw yourself?!");
            delay(2);
        }


}

void CollectedTrash()
{
    printf("\nYou collected all the trash! \nNow you have to put all of it in the recycle bin.");
}

int RecycleBin(int x, int y, char a[50][200])
{
    int Kbr=0,k=0;
    char posoka;
    char searchLeft = 'a';
    char searchRight = 'd';
    char searchUp = 'w';
    char searchDown = 's';

    char searchLeftD = '1';
    char searchRightD = '2';
    char searchUpD = '3';
    char searchDownD = '4';


    if (Kbr!=1) printf("\nPosoka (1=10 v lqvo; 2=10 v dqsno; 3=10 nagore; 4=10 nadolu)\n a=1 v lqvo; d=1 v dqsno; w=1 nagore; s=1 nadolu: ");
    posoka=getchar();
    y=SearchOY(a);
    x=SearchOX(a);


        if (posoka == searchLeftD){
            if (a[y][x-10]=='X' || a[y][x-10]=='W'||a[y][x-10]=='S'||a[y][x-10]=='H'||a[y][x-10]=='P') a[y][x-1]='O';
            else {
            a[y][x-10]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchRightD){
            if (a[y][x+10]=='X' || a[y][x+10]=='W' || a[y][x+10]=='H'||a[y][x-10]=='S'||a[y][x-10]=='P') a[y][x+1]='O';
            else {
            a[y][x+10]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchDownD){
            if(a[y+10][x]=='X' || a[y+10][x]=='W' || a[y+10][x]=='H' || a[y+10][x]=='P' || a[y+10][x]=='S') a[y+1][x]='O';
            else {
            a[y+10][x]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchLeft)
        {

             if(a[y][x-1]=='S')
             {
                 printf("\nCongratulations! You have just thrown your trash in the recycle bin!");
                 Kbr=1;
                 delay(5);
                 a[y][x]='O';
                 return Kbr;
             }
             if(a[y][x-1]==' ')
             {
              a[y][x-1]='O';
              a[y][x]=' ';
             }
        }

        if (posoka == searchRight)
        {

             if(a[y][x+1]=='H')
             {
                printf("Congratulations! You have just thrown your trash in the recycle bin!");
                Kbr=1;
                delay(5);
                a[y][x]='O';
                return Kbr;
             }
             if(a[y][x+1]==' ')
            {
               a[y][x+1]='O';
               a[y][x]=' ';
            }
        }

        if (posoka == searchDown )
        {


            if(a[y+1][x]=='H'||a[y+1][x]=='P'||a[y+1][x]=='S')
            {
                printf("Congratulations! You have just thrown your trash in the recycle bin!");
                Kbr=1;
                delay(5);
                a[y][x]='O';
                return Kbr;
            }
            if(a[y+1][x]==' ')
            {
                a[y+1][x]='O';
                a[y][x]=' ';
            }
        }


}

SearchOY(char a[50][200])
{
    int x,y;
    for (y=0;y<49;y++)
    {
        for (x=0; x<199; x++)
        {
            if (a[y][x]=='O')
            {
                return y;
                break;
            }
        }
    }
}

SearchOX(char a[50][200])
{
    int x,y;
    for (y=0;y<49;y++)
    {
        for (x=0; x<199; x++)
        {
            if (a[y][x]=='O')
            {
                return x;
                break;
            }
        }
    }
}

int TreeMove(int y, int x, char a[50][200],int br)
{
    int k=0;

    char posoka;
    char searchLeft = 'a';
    char searchRight = 'd';
    char searchUp = 'w';
    char searchDown = 's';

    char searchLeftD = '1';
    char searchRightD = '2';
    char searchUpD = '3';
    char searchDownD = '4';

    printf("\nPosoka (1=10 v lqvo; 2=10 v dqsno; 3=10 nagore; 4=10 nadolu)\n a=1 v lqvo; d=1 v dqsno; w=1 nagore; s=1 nadolu: ");

    posoka=getchar();
    y=SearchOY(a);
    x=SearchOX(a);

        if (posoka == searchLeftD){
            if (a[y][x-10]=='X') a[y][x-1]='O';
            else {
            a[y][x-10]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchRightD){
            if (a[y][x+10]=='X') a[y][x+1]='O';
            else {
            a[y][x+10]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchUpD){
            if(a[y-10][x]=='X') a[y-1][x]='O';
            else {
            a[y-10][x]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchDownD){
            if(a[y+10][x]=='X') a[y+1][x]='O';
            else {
            a[y+10][x]='O';
            a[y][x]=' ';
            }
        }

        if (posoka == searchLeft)
        {
             if (a[y][x-1]=='X')
            {
                printf("\nYou planted a tree!");
                delay(2);
                a[y][x-1]='T';
                br++;
            }
             if(a[y][x-1]=='T'&&br>=1)
            {
                printf("\nYou have already planted a tree here! You can't plant another one here.");
                delay(2);
                a[y][x]='O';
            }
             if(a[y][x-1]==' ')
             {
              a[y][x-1]='O';
              a[y][x]=' ';
             }
        }

        if (posoka == searchRight)
        {
            if (a[y][x+1]=='X')
            {
                printf("\nYou planted a tree!");
                delay(2);
                a[y][x+1]='T';
                br++;
            }
             if(a[y][x+1]=='T' && br>=1)
            {
                printf("\nYou have already planted a tree here! You can't plant another one here.");
                delay(2);
                a[y][x]='O';
            }
             if(a[y][x+1]==' ')
            {
               a[y][x+1]='O';
               a[y][x]=' ';
            }
        }

        if (posoka == searchUp ) {
            if (a[y-1][x]=='X')
            {
                printf("\nYou have planted a tree");
                delay(2);
                a[y-1][x]='T';
                br++;
            }
            if(a[y-1][x]=='T' &&br>=1)
            {
                printf("\nYou have already planted a tree here! You can't plant another one here.");
                delay(2);
                a[y][x]='O';
            }
            if(a[y-1][x]==' ')
            {
                a[y-1][x]='O';
                a[y][x]=' ';
            }
        }

        if (posoka == searchDown )
        {
            if (a[y+1][x]=='X'){
                printf("\nYou have planted a tree!");
                delay(2);
                a[y+1][x]='T';
                br++;
            }
            if(a[y+1][x]=='T' && br>=1)
            {
                printf("\nYou have already planted a tree here! You can't plant another one here.");
                delay(2);
                a[y][x]='O';
            }
            if(a[y+1][x]==' ')
            {
                a[y+1][x]='O';
                a[y][x]=' ';
            }
        }

        return br;
}



void delay(int number_of_seconds)
{
    int milli_seconds = 1000 * number_of_seconds;
    clock_t start_time = clock();
    while (clock() < start_time + milli_seconds);
}
